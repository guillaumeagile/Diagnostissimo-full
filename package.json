{
  "name": "Diagnostissimo",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 4200",
    "start-cypress": "ng serve --port 4201",
    "build": "ng build --prod --base-href /Diagnostissimo/",
    "test": "ng test",
    "lint": "ng lint",
    "ci": "run-s lint test:e2e:ci",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test:e2e:ci": "start-server-and-test start-cypress http-get://localhost:4201 cy:run",
    "test:e2e:open": "start-server-and-test start-cypress http-get://localhost:4201 cy:open"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "8.2.13",
    "@angular/common": "8.2.13",
    "@angular/compiler": "8.2.13",
    "@angular/core": "8.2.13",
    "@angular/forms": "8.2.13",
    "@angular/platform-browser": "8.2.13",
    "@angular/platform-browser-dynamic": "8.2.13",
    "@angular/router": "8.2.13",
    "core-js": "3.5.0",
    "rxjs": "6.4.0",
    "tslib": "1.10.0",
    "zone.js": "0.9.1"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "8.4.1",
    "@angular-devkit/build-angular": "0.803.16",
    "@angular/cli": "8.3.16",
    "@angular/compiler-cli": "8.2.13",
    "@angular/language-service": "8.2.13",
    "@types/chai": "4.2.7",
    "@types/jasmine": "3.3.8",
    "@types/jasminewd2": "2.0.3",
    "@types/node": "8.9.4",
    "chai": "4.2.0",
    "codelyzer": "5.0.0",
    "cypress": "3.8.0",
    "cypress-cucumber-preprocessor": "1.18.0",
    "eslint": "6.7.2",
    "jasmine-core": "3.4.0",
    "jasmine-spec-reporter": "4.2.1",
    "jest": "24.9.0",
    "jest-junit": "10.0.0",
    "jest-preset-angular": "8.0.0",
    "karma": "4.1.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage-istanbul-reporter": "2.0.1",
    "karma-jasmine": "2.0.1",
    "karma-jasmine-html-reporter": "1.4.0",
    "prettier": "1.19.1",
    "start-server-and-test": "1.10.6",
    "ts-node": "7.0.0",
    "typescript": "3.5.3"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/specs/unit/setupJest.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/specs/tsconfig.spec.json"
      },
      "stringifyContentPathRegex": true
    },
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "./testResults/",
          "outputName": "./Diagnostissimo.unit.TestResults.xml"
        }
      ]
    ],
    "moduleNameMapper": {
      "@model/(.*)": "<rootDir>/src/app/model/$1",
      "@services/(.*)": "<rootDir>/src/app/services/$1",
      "@utils/(.*)": "<rootDir>/src/app/utils/$1"
    }
  },
  "cypress-cucumber-preprocessor": {
    "step_definitions": "./specs/e2e/specs/"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  }
}
